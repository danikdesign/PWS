<%= render 'shared/errors', object: @client %>

<p class="lead">
  Complete the form below
</p>
<%= form_with model: @client, class: 'row g-3' do |f| %>
  <div class="col-md-6">
    <%= f.label :first_name, class: 'form-label' %>
    <%= f.text_field :first_name, class: 'form-control form-control-lg' %>
  </div>

  <div class="col-md-6">
    <%= f.label :last_name, class: 'form-label' %>
    <%= f.text_field :last_name, class: 'form-control form-control-lg' %>
  </div>

  <div class="col-md-6">
    <%= f.label :address, class: 'form-label' %>
    <%= f.text_field :address, class: 'form-control form-control-lg' %>
  </div>

  <div class="col-md-6">
    <%= f.label :phone, class: 'form-label' %>
    <%= f.text_field :phone, class: 'form-control form-control-lg' %>
  </div>

  <div class="col-md-6">
    <%= f.label :purifier_brand, class: 'form-label' %>
    <%= f.select :purifier_brand, @purifier_brands.map { |b| b.title}, {}, class: 'form-select form-select-lg' %>
  </div>

  <div class="col-md-2">
    <%= f.label :purifier_stages, class: 'form-label' %>
    <%= f.select :purifier_stages, @purifier_stages.map { |s| s.number}, {}, class: 'form-control form-control-lg' %>
  </div>


  <div class="col-md-2">
    <%= f.label :purifier_tank, class: 'form-label' %>
    <%= f.select :purifier_tank, @purifier_tanks.map { |t| t.capacity}, {}, class: 'form-control form-control-lg' %>
  </div>

  <div class="col-md-2">
    <div class="row">
      <span>Pump</span>
    </div>

    <div class="form-check form-switch style">
      <%= f.label :purifier_pump, class: 'form-check-label' do %>
        <%= f.check_box :purifier_pump, class: 'form-check-input', style: 'mt-4' %>
      <% end %>
    </div>
  </div>


  <div class="col-12">
    <%= f.submit 'Add client', class: 'btn btn-primary' %>
  </div>
<% end %>