<%= search_form_for @q, class: 'd-flex' do |f| %>
  <%= f.search_field :first_name_or_phone_cont,
                     class: 'form-control me-2',
                     type: 'search',
                     placeholder: t('.placeholder') %>

  <%= f.submit t('.button'), class: 'btn btn-outline-success' %>
<% end %>